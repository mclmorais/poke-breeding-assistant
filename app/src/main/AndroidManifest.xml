<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="marcelo.breguenait.breedingassistant">

    <application
        android:name=".application.BreedingAssistantApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AssistantThemeLight">

        <activity
            android:name=".screens.goals.GoalsActivity"
            android:theme="@style/AssistantThemeLight">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".screens.creation.CreationActivity"
            android:theme="@style/AssistantThemeLight" />
        <activity
            android:name=".screens.assistant.AssistantActivity"
            android:label="@string/title_activity_assistant"
            android:theme="@style/AssistantThemeLight" />

    </application>

</manifest>