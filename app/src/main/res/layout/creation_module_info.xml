<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AssistantThemeLight.TintedSection"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:paddingBottom="0dp">

    <android.support.v7.widget.CardView
        android:id="@+id/main_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="bottom"
        app:cardBackgroundColor="@color/cardview_light_background">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/main_card_constraint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingBottom="4dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">


            <ImageView
                android:id="@+id/selected_pokemon_icon"
                android:layout_width="112dp"
                android:layout_height="112dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="14dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/shape_circle_stroke"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="h,1:1"
                app:layout_constraintHorizontal_bias="0.554"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/stat_bars_module"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/pkmn_link_099" />


            <include
                android:id="@+id/stat_bars_module"
                layout="@layout/creation_item_stat_bars"
                android:layout_width="162dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/selected_pokemon_icon"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.25" />


            <android.support.design.widget.FloatingActionButton
                android:id="@+id/selected_pokemon_edit"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignBottom="@id/selected_pokemon_icon"
                android:layout_marginStart="84dp"
                android:layout_marginTop="84dp"
                android:clickable="true"
                android:tint="@color/white"
                app:backgroundTint="@color/colorPrimaryLight"
                app:elevation="1dp"
                app:fabSize="mini"
                app:layout_constraintLeft_toLeftOf="@+id/selected_pokemon_icon"
                app:layout_constraintTop_toTopOf="@+id/selected_pokemon_icon"
                app:srcCompat="@drawable/ic_edit_black_24dp"
                android:focusable="true" />


        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>

