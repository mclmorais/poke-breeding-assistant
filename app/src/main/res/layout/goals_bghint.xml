<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:layout_editor_absoluteX="0dp"
                                             tools:layout_editor_absoluteY="25dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/portrait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:alpha="0.7"
        android:src="@drawable/portrait_breeder_female_whitebg"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/spannable"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.501"/>

    <TextView
        android:id="@+id/spannable"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:gravity="center_vertical"
        android:lineSpacingExtra="1dp"
        android:text="@string/hint_no_goals"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/portrait"
        app:layout_constraintLeft_toRightOf="@+id/portrait"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/portrait"
        app:layout_constraintVertical_bias="0.461"/>

</android.support.constraint.ConstraintLayout>