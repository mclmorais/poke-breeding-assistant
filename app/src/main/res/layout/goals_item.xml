<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_background"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:foreground="?attr/selectableItemBackground"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">


    <View
        android:id="@+id/pokemon_background"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/shape_circle"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/pokemon_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:elevation="6dp"
        android:transitionName="profile"
        app:srcCompat="@drawable/pkmn_link_662"
        app:layout_constraintTop_toTopOf="@+id/pokemon_background"
        app:layout_constraintRight_toRightOf="@+id/pokemon_background"
        app:layout_constraintBottom_toBottomOf="@+id/pokemon_background"
        app:layout_constraintLeft_toLeftOf="@+id/pokemon_background"/>

    <TextView
        android:id="@+id/pokemon_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/pokemon_iv_hp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toRightOf="@+id/pokemon_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Fletchinder"/>

    <ImageView
        android:id="@+id/pokemon_iv_hp"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/pokemon_background"
        app:layout_constraintTop_toBottomOf="@id/pokemon_name"
        app:srcCompat="@drawable/ic_iv_circle"
        app:layout_constraintVertical_bias="0.5"/>

    <ImageView
        android:id="@+id/pokemon_iv_atk"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:layout_marginStart="2dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/pokemon_iv_hp"
        app:layout_constraintLeft_toRightOf="@+id/pokemon_iv_hp"
        app:layout_constraintTop_toTopOf="@+id/pokemon_iv_hp"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_iv_triangle"/>

    <ImageView
        android:id="@+id/pokemon_iv_def"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:layout_marginStart="2dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/pokemon_iv_atk"
        app:layout_constraintLeft_toRightOf="@+id/pokemon_iv_atk"
        app:layout_constraintTop_toTopOf="@+id/pokemon_iv_atk"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_iv_square"/>

    <ImageView
        android:id="@+id/pokemon_iv_satk"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:layout_marginStart="2dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/pokemon_iv_def"
        app:layout_constraintLeft_toRightOf="@+id/pokemon_iv_def"
        app:layout_constraintTop_toTopOf="@+id/pokemon_iv_def"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_iv_heart"/>

    <ImageView
        android:id="@+id/pokemon_iv_sdef"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:layout_marginStart="2dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/pokemon_iv_satk"
        app:layout_constraintLeft_toRightOf="@+id/pokemon_iv_satk"
        app:layout_constraintTop_toTopOf="@+id/pokemon_iv_satk"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/ic_iv_star"/>

    <ImageView
        android:id="@+id/pokemon_iv_spd"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:layout_marginStart="2dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/pokemon_iv_sdef"
        app:layout_constraintLeft_toRightOf="@+id/pokemon_iv_sdef"
        app:layout_constraintTop_toTopOf="@+id/pokemon_iv_sdef"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/ic_iv_diamond"/>

    <TextView
        android:id="@+id/pokemon_extra_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/tertiary_text_light"
        app:layout_constraintBottom_toBottomOf="@+id/pokemon_iv_hp"
        app:layout_constraintLeft_toRightOf="@+id/pokemon_iv_spd"
        app:layout_constraintTop_toTopOf="@+id/pokemon_iv_hp"
        tools:text="• Adamant • Gale Wings"/>


</android.support.constraint.ConstraintLayout>